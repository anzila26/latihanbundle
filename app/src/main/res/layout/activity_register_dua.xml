<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/bg_tiga"
    tools:context=".RegisterDuaActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inSatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inDua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inSatu"
        android:paddingTop="10dp"
        android:hint="email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inTiga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inDua"
        android:paddingTop="10dp"
        android:hint="phone">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inEmpat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inTiga"
        android:paddingTop="10dp"
        android:hint="age">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inLima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inEmpat"
        android:paddingVertical="10dp"
        android:hint="address">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnRegdua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inLima"
        android:layout_centerHorizontal="true"
        android:text="save"/>

</RelativeLayout>